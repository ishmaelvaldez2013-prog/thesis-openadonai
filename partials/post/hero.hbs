<header class="post-header">
	<div class="container">
		{{#primary_tag}}
			<a class="post-tag" href="{{url}}">{{name}}</a>
		{{/primary_tag}}
		<h1 class="post-title">{{title}}</h1>
		<div class="post-meta-wrapper">
			<span class="post-meta">
				{{#primary_author}}
					<a class="post-author" href="{{url}}">
						{{> "components/image" size="60" sizes="30px" fast=true src=profile_image alt=name placeholder=name.[0]}}
						<span>{{name}}</span>
					</a>
				{{/primary_author}}
				<time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
				{{#if reading_time}}
				<span class="post-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
				{{/if}}
			</span>

			{{> "post/button-share"}}
		</div>

		{{#if custom_excerpt}}
		<p class="post-excerpt">{{custom_excerpt}}</p>
		{{/if}}
	</div>

	{{!-- Media (featured image and video). --}}
	<div class="post-media">
		{{~#if feature_image}}
		<figure class="post-featured-image">
			{{> "components/image" fast=true src=feature_image alt=feature_image_alt altElse=title}}
			{{#if feature_image_caption}}
				<figcaption>{{feature_image_caption}}</figcaption>
			{{/if}}
		</figure>
		{{/if~}}
	</div>
</header>