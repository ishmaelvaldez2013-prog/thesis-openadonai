<section class="oa-hero">
  <div class="oa-hero-inner">
    {{#if eyebrow}}
      <p class="oa-hero-eyebrow">{{eyebrow}}</p>
    {{/if}}

    <h1 class="oa-hero-title">{{title}}</h1>

    {{#if subtitle}}
      <p class="oa-hero-subtitle">{{subtitle}}</p>
    {{/if}}

    {{#if tag}}
      <span class="oa-hero-tag">{{tag}}</span>
    {{/if}}
  </div>
</section>
