{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#page}}
{{!-- Everything inside the #page block pulls data from the page --}}

	{{#has tag="#hide-posts-sidebar"}}{{#contentFor "body-class"}} hide-sidebar-posts{{/contentFor}}{{/has}}
	{{#contentFor "body-class"}} template-authors{{/contentFor}}

	{{!-- Hero. --}}
	{{> "sections/hero" style_small=true container_wide=true match_title_image=@page.show_title_and_feature_image}}

	{{!-- Content. --}}
	{{> "post/content"}}

	{{!-- Authors. --}}
	{{#get "authors" include="count.posts" limit="100"}}
		{{#if authors}}
		<div class="section section-list container-wide">
			{{#foreach authors}}
				<div class="card card-author{{#if profile_image}} card-has-image{{/if}}">
					<a class="card-link" href="{{url}}" aria-label="{{name}}"></a>
					{{#if profile_image}}
						{{> "components/image" class="card-image" size="100" sizes="100px" src=profile_image alt=name}}
					{{/if}}
					<div class="card-content">
						<h3 class="card-title">{{name}}</h3>
						{{#if bio}}
							<p>{{bio}}</p>
						{{/if}}

						<div class="card-footer">
							{{plural count.posts empty=(t "0 posts") singular=(t "% post") plural=(t "% posts")}}
						</div>
					</div>
				</div>
			{{/foreach}}
		</div>
		{{/if}}
	{{/get}}

{{/page}}
