{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#tag}}
	{{> "sections/hero"
		style_small=true
		container_wide=true
		total_posts=../pagination.total
		match_title_image=true
		title=name
	}}

	{{#if description}}
		<p class="post-excerpt container-wide">{{description}}</p>
	{{/if}}
{{/tag}}

{{#if posts}}
	<section class="section section-posts container-wide">
		{{pagination prepend=".tag-posts-list" from=pagination_from next=false}}

		<div class="section-list tag-posts-list">
			{{#foreach posts}}
				{{> "components/card-post"}}
			{{/foreach}}
		</div>

		{{pagination type="load-more-infinite" append=".tag-posts-list" from=pagination_from prev=false}}
	</section>
{{/if}}
